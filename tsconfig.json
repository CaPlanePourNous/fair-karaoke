{
  "compilerOptions": {
    /* --- Compatibilité et compilation --- */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* --- Plugin spécifique à Next.js --- */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* --- Import simplifié avec alias --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  /* --- Fichiers pris en compte --- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* --- Fichiers ignorés --- */
  "exclude": ["node_modules"]
}
